@using Savonia.Measurements.Manager.Helpers;
@model IEnumerable<Savonia.Measurements.Models.DataModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XmlValue)
            </th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tag)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LongValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TextValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.XmlValue)
        </td>
    </tr>
}

</table>

