@model Savonia.Measurements.Models.AccessKeyModel

@{
    ViewBag.Title = "Delete AccessKey";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Accesskey</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CombinedKey)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CombinedKey)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AccessControl)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AccessControl)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ValidFrom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValidFrom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ValidTo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValidTo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Info)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Info)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ProviderID)
        @Html.HiddenFor(model => model.Key)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-warning" /> |
            @Html.ActionLink("Back to Provider", "Details", new { id = Model.ProviderID })
        </div>
    }
</div>

@section scripts{
    <script type="text/javascript">
    $(function () {
        $( "form" ).submit(function( event ) {

            var input = prompt("All the data will be permanently lost. Are you sure you want to delete AccessKey?\n\nType: 'DELETE' to Confirm!");
            if (input == "DELETE") {
                return;
            }
            else {
                event.preventDefault();
            }
        });
    });
    </script>
}
